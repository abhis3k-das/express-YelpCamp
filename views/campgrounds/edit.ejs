<% layout('layout/boilerplate') %>
<div class="row mb-3">
	<h1 class="text-center">New Campground</h1>
	<div class="col">
		<form action="/campgrounds" method="POST">
			<div class="mb-3">
				<label class="form-label" for="title">Enter Title : </label>
				<input class="form-control" type="text" id="title" name="title" placeholder="text" value='<%=camp.title%>'>
			</div>

			<div class="mb-3">

			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Enter Price :</label>
				<div class="input-group mb-3">
					<span class="input-group-text">@</span>
					<input class="form-control" type="number" step="0.01" id="price" name="price" placeholder="0.0" value='<%=camp.price%>'>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="image">Enter Image Url :</label>
				<input class="form-control" type="text" id="image" name="image" placeholder="image url" value='<%=camp.image%>'>
				<img class="img-thumbnail" style="height: 100px; width: 150px;" src="<%=camp.image%>">
			</div>

			<div class="mb-3">
				<label class="form-label" for="location">Enter Location : </label>
				<input class="form-control" type="text" id="location" name="location" placeholder="location" value='<%=camp.location%>'>
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Enter Descrpition : </label>
				<textarea class="form-control" type="text" id="description" name="description" placeholder="description"><%=camp.description%></textarea>
			</div>

			<div class="mb-3 d-flex justify-content-end">
				<button class="btn btn-primary" type="submit">Update Campground</button>
			</div>
		</form>
	</div>
</div>