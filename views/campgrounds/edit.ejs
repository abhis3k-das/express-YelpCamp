<% layout('layout/boilerplate') %>
<div class="row mb-3">
	<h1 class="text-center">Edit Campground</h1>
	<div class="col d-flex justify-content-center">
		<form action='/campgrounds/<%=camp._id%>?_method=PUT' method="POST" class="validate-form" style="width: 540px;" novalidate>
			<div class="mb-3">
				<label class="form-label" for="title">Enter Title : </label>
				<input class="form-control" type="text" id="title" name="title" placeholder="text" value='<%=camp.title%>' required>
				<div class="valid-feedback">
					Looks Good!
				</div>
				<div class="invalid-feedback">
					Please enter a title.
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Enter Price :</label>
				<div class="input-group mb-3">
					<span class="input-group-text">@</span>
					<input class="form-control" type="number" step="0.01" id="price" name="price" placeholder="0.0" value='<%=camp.price%>' required>
					<div class="valid-feedback">
						Looks Good!
					</div>
					<div class="invalid-feedback">
						Please enter a price.
					</div>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="image">Enter Image Url :</label>
				<input class="form-control" type="text" id="image" name="image" placeholder="image url" value='<%=camp.image%>'>
				<img id="thumbnail" class="img-thumbnail" style="height: 100px; width: 150px;" src="<%=camp.image%>" required>
				<div class="valid-feedback">
					Looks Good!
				</div>
				<div class="invalid-feedback">
					Please enter an image url.
				</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="location">Enter Location : </label>
				<input class="form-control" type="text" id="location" name="location" placeholder="location" value='<%=camp.location%>' required>
				<div class="valid-feedback">
					Looks Good!
				</div>
				<div class="invalid-feedback">
					Please enter a location.
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Enter Descrpition : </label>
				<textarea class="form-control" type="text" id="description" name="description" placeholder="description" required><%=camp.description%></textarea>
				<div class="valid-feedback">
					Looks Good!
				</div>
				<div class="invalid-feedback">
					Please enter a description.
				</div>
			</div>

			<div class="mb-3 d-flex justify-content-end">
				<button class="btn btn-primary" type="submit">Update Campground</button>
			</div>
		</form>
	</div>
</div>