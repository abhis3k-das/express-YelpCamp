<% layout('layout/boilerplate') %>
<div class="row mb-3">
	<h1 class="text-center">New Campground</h1>
	<div class="col-6 offset-3">
		<form action="/campgrounds" method="POST">
			<div class="mb-3">
				<label class="form-label" for="title">Enter Title : </label>
				<input class="form-control" type="text" id="title" name="title" placeholder="text">
			</div>

			<div class="mb-3">

			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Enter Price :</label>
				<div class="input-group mb-3">
					<span class="input-group-text">@</span>
					<input class="form-control" type="number" step="0.01" id="price" name="price" placeholder="0.0">
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="image">Enter Image Url :</label>
				<input class="form-control" type="text" id="image" name="image" placeholder="image url">
			</div>

			<div class="mb-3">
				<label class="form-label" for="location">Enter Location : </label>
				<input class="form-control" type="text" id="location" name="location" placeholder="location">
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Enter Descrpition : </label>
				<textarea class="form-control" type="text" id="description" name="description" placeholder="description"></textarea>
			</div>

			<button class="btn btn-primary col-3 offset-9" type="submit">Add Campground</button>
		</form>
	</div>