<% layout('./layout/boilerplate') %>
<h1 class="text-center">All Campgrounds</h1>
<div class="row">
	<div class="col-6 offset-3">
		<ul style="text-decoration: none;">
			<% for(let i = 0 ; i < campgrounds.length ; i++) {%>
			<li key='<%= campgrounds[i]._id %>' style="list-style: none;">
				<div class="card mb-3" style="max-width: 840px; max-height: 250px;">
					<div class="row g-0">
						<div class="col-md-4">
							<img src="<%=campgrounds[i].image %>" class="img-fluid rounded-start" style="height:249px; width: 300px;" alt="...">
						</div>
						<div class="col-md-8">
							<div class="card-body">
								<h5 class="card-title"><%=campgrounds[i].title%></h5>
								<p class="card-text">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Similique nam exercitationem sequi labore necessitatibus unde consectetur suscipit pariatur fugit sint. Molestiae, odit. Dignissimos, perferendis quae! Cum facere enim voluptate sequi.</p>
								<p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
							</div>
						</div>
					</div>
					<a href='<%=`/campgrounds/${campgrounds[i]._id}`%>' class="stretched-link"></a>
				</div>
			</li>
			<% } %>
		</ul>
	</div>
</div>